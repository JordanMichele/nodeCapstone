<% include ../partials/header %>

<div class="container">
  <div class="row">
      <div style="margin: 25px auto">
        <h1 style="margin-bottom: 25px">Add New Comment to <%= brewery.name %> </h1>
        <form action="/breweries/<%= brewery._id %>/comments" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/breweries">Go Back</a>
      </div>
  </div>
</div>

<% include ../partials/footer %>