<% include ../partials/header %>
<div class="container">
  <div class="row">
      <div style="margin: 25px auto">
        <h1 style="margin-bottom: 25px">Edit <%= brewery.name %></h1>
        <form action="/breweries/<%= brewery._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="brewery[name]" value="<%= brewery.name %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="number" name="brewery[price]" value="<%= brewery.price %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="brewery[image]" value="<%= brewery.image %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="brewery[description]" value="<%= brewery.description %>">
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/breweries">Go Back</a>
      </div>
  </div>
</div>
<% include ../partials/footer %>
