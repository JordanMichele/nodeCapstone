<% include ../partials/header %>

<div class="container">

<header class="jumbotron">
  <div class="container">
    <h1> Welcome to The Brewery Brainiac </h1>
    <p>View the Craft Breweries from Upstate NY!!</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/breweries/new">Add New Brewery </a>
    </p>
  </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap; ">
  <% breweries.forEach(function(brewery){ %>
    <div class="col-md-3 col-sm-6">
      <div class="img-thumbnail">
        <img src="<%= brewery.image %>" style="height: 200px; width:100%;">
        <div class="caption">
          <h4><%= brewery.name %></h4>
        </div>
        <p>
          <a href="/breweries/<%= brewery._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div>
    </div>
    <% }); %>
  </div>

</div>

<% include ../partials/footer %>
